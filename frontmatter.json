{
	"$schema": "https://beta.frontmatter.codes/frontmatter.schema.json",
	"frontMatter.taxonomy.contentTypes": [
		{
			"name": "default",
			"pageBundle": false,
			"previewPath": null,
			"fields": [
				{
					"title": "title",
					"name": "title",
					"type": "string"
				},
				{
					"title": "slug",
					"name": "slug",
					"type": "slug",
					"editable": true,
					"default": "{{slug}}"
				},
				{
					"title": "description",
					"name": "description",
					"type": "string"
				},
				{
					"title": "date",
					"name": "date",
					"type": "datetime",
					"default": "{{now}}",
					"isPublishDate": true,
					"dateFormat": "YYYY-MM-DD"
				},
				{
					"title": "image",
					"name": "image",
					"type": "image",
					"isPreviewImage": true
				},
				{
					"title": "Image Alt",
					"name": "imageAlt",
					"type": "string"
				},
				{
					"title": "author",
					"name": "author",
					"type": "string",
					"single": true
				},
				{
					"title": "categories",
					"name": "categories",
					"type": "categories",
					"taxonomyLimit": 1
				},
				{
					"title": "tags",
					"name": "tags",
					"type": "tags",
					"taxonomyLimit": 6
				},
				{
					"title": "status",
					"name": "status",
					"type": "draft",
					"default": "draft"
					
				}
			]
		}
	],
	"frontMatter.framework.id": "astro",
	"frontMatter.content.draftField": {
		"name": "status",
		"type": "choice",
		"choices": ["draft", "publish"]
	},
	"frontMatter.content.publicFolder": {
		"path": "src/assets",
		"relative": true
	},
	"frontMatter.preview.host": "http://localhost:3000",
	"frontMatter.content.pageFolders": [
		{
			"title": "blog",
			"path": "[[workspace]]/src/content/blog",
			"previewPath": "'blog'",
			"contentTypes": ["default"],
			"filePrefix": null
		}
	]
}
